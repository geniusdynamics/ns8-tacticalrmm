[Unit]
Description=Podman nginx-app.service
BindsTo=tacticalrmm.service
After=tacticalrmm.service 
[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
# EnvironmentFile=%S/state/secrets/passwords.secret
Restart=always
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/nginx-app.pid %t/nginx-app.ctr-id
ExecStartPre=/bin/mkdir -p %S/state/restore/
ExecStart=/usr/bin/podman run --conmon-pidfile %t/nginx-app.pid \
    --cidfile %t/nginx-app.ctr-id --cgroups=no-conmon \
    --pod-id-file %t/tacticalrmm.pod-id --replace -d --name nginx-app \
    --volume tactical_data:/opt/tactical:Z \
    --volume mesh_data:/home/node/app/nginx-data:Z \
    --env-file=%S/state/nginx.env \
     ${TACTICAL_NGINX_IMAGE}
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/nginx-app.ctr-id -t 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/nginx-app.ctr-id
ExecReload=/usr/bin/podman kill -s HUP nginx-app
SyslogIdentifier=%u
PIDFile=%t/nginx-app.pid
Type=forking

[Install]
WantedBy=default.target
